<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= product.brand.name %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category.name %>
  </p>
  <% if product.photo.attached? %>
    <%= image_tag product.photo, width: 150 %>
  <% end %>
</div>
